{
  "name": "bcnfstar",
  "engines": {
    "npm": ">=7",
    "node": "^16.10 || ^14.17"
  },
  "scripts": {
    "build": "run-p build:*",
    "start": "cd server && npm run start",
    "dev": "run-p dev:*",
    "install": "run-p install:*",
    "test:dev": "cross-env CYPRESS_FRONTEND_BASEURL=http://localhost:4200 CYPRESS_BACKEND_BASEURL=http://localhost run-p dev:* cypress:open",
    "test:prod": "cross-env CYPRESS_FRONTEND_BASEURL=http://localhost CYPRESS_BACKEND_BASEURL=http://localhost run-p start:coverage cypress:open",
    "start:coverage": "nyc npm run start",
    "prebuild": "npm run generateTypeGuards",
    "install:server": "cd server && npm install",
    "install:frontend": "cd frontend && npm install",
    "build:frontend": "cd frontend && npm run build",
    "dev:server": "cd server && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "generateTypeGuards": "ts-auto-guard --export-all --debug server/definitions/*",
    "prepare": "husky install",
    "lint": "run-s lint:*",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:prettier": "prettier --write .",
    "postcheckout": "sh npm-install-githook.sh"
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.9.12",
    "cross-env": "^7.0.3",
    "cypress": "^9.1.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.2",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.2"
  },
  "lint-staged": {
    "*.{js,md,ts,html,json}": "prettier --write"
  },
  "dependencies": {
    "@types/node": "^16.11.11",
    "ts-auto-guard": "^1.0.0-alpha.29",
    "typescript": "~4.4.4"
  }
}
